# SECURE.LINK Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Database connection (required)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://securelink:your_password@localhost:5432/securelink

# PostgreSQL connection details (required - must match DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGDATABASE=securelink
PGUSER=securelink
PGPASSWORD=your_password

# TURN credential encryption key (required)
# Generate with: openssl rand -hex 32
# IMPORTANT: This key must be consistent - if you change it, you must re-enter TURN credentials
TURN_ENCRYPTION_KEY=

# Server configuration
NODE_ENV=production
PORT=5000
